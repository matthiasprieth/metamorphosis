<!DOCTYPE html>
<html>
<head>
  <title>Metamorphosis</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="haupt">
  <%= render "shared/loginHeader" %>
  <div class="login">
    <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash#{name}" %>
    <% end %>
  </div>

  <div class="text">
    <%= yield %>
  </div>

</div>

</body>
</html>

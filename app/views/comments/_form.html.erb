<% comment ||= Comment.new %>
<%= form_for comment, :remote => true, :locals => { :picture_id => picture_id } do |f| %>
    <% if comment.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

          <ul>
            <% comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.text_area :comment, :placeholder => "Write a comment...." %>
    </div>

    <%= f.hidden_field :picture_id, :value => picture_id if defined?(picture_id) %>

    <div class="actions">
      <%= f.submit 'Create Comment', :class => "btn btn-danger" %>
    </div>
<% end %>




<table>

<% @comments.each do |comment| %>

  <tr>
    <td><%= link_to image_tag(comment.user.profil_pic_url(:thumb).to_s), user_path(comment.user) %>
    </td>
    <td><%= text_area_tag 'prev_comments', comment.comment, :disabled => 'disabled' %></td>

    <% if user_signed_in? && current_user == comment.user %>
    <td>
      <%= link_to edit_comment_path(comment) do %>
        <i class="icon-pencil"></i>
      <% end %>
    </td>
    <td>
      <%= link_to comment, method: :delete, data: { confirm: 'Are you sure?' } do %>
        <i class="icon-remove"></i>
      <% end %>
    </td>
    <% end %>
  </tr>
<% end %>
</table>